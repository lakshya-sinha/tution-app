            display: none;
            flex-direction: column;
            align-items: flex-start;
            padding: 24px 32px;
            gap: 18px;
            animation: fadeIn 0.3s;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-12px);}
            to { opacity: 1; transform: translateY(0);}
        }

        .chapter-links {
            display: flex;
            flex-wrap: wrap;
            gap: 10px 22px;
        }

        .c1Item a {
            padding: 7px 12px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #1976d2;
            color: #1976d2;
            text-decoration: none;
            background: #e3f2fd;
            transition: background 0.15s, color 0.15s;
        }

        .c1Item a:hover {
            background: #1976d2;
            color: #fff;
        }

        hr {
            border: none;
            border-top: 1px solid #e0e0e0;
            margin: 0 0 16px 0;
        }
    </style>
